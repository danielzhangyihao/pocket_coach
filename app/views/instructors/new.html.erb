<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@instructor) do |f| %>
    <%= render 'shared/instructor_error_messages' %>


      <%= f.radio_button :companyadmin,  true %>
      <%= f.label :companyadmin, "Create" %>
     
      <%= f.radio_button :companyadmin,  false %>
      <%= f.label :companyadmin, "Add" %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <div id="create-company">
      <%= f.label :facility, "Name of Business/facility" %>
      <%= f.text_field :facility %>
      </div>
      
      <div id="add-company">
      <%= f.label :facility, "Search for Business/facility" %>
      
      <%= f.select :facility, options_for_select([['Please choose a company']]+
      @companies.collect {|r| [r.name] } , :include_blank => true, :disabled => ['Please choose a company'],  :selected => ['Please choose a company'] ) %>
      </div>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>


      

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>